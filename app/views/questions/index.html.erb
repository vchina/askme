<div class="container">
  <h1 class="title-lg mb">Вопросы</h1>
  <% @question.each do |question| %>
    <p class="mt-sm <%= 'hidden' if question.is_hidden? %>"><%= link_to "Вопрос #{question.id}", question_path(question) %></p>
  <% end %>

  <p class="mb mt"><%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main' %></p>
</div>