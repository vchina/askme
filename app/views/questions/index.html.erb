<div class="container">
  <p class="mt"> <%= render 'form', question: @question %></p>
</div>

<div class="container mt-sm">
<h1 class="title-lg mb">
  <%= @questions.count %>
  <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
